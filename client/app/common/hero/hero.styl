@import '../common'

@media screen and (min-width: 320px) {
	.hero {
	  background-color $darkBgColor
	  padding 3rem
	  font-size 1.35em
	  height 42em
	  opacity 0.9
	}
	/*Values go up rather than down*/ 
	.years-form {
		text-align center
		margin-top 1.5em
	}

	.year-value {
		padding 0 0.5em
	}

	.content {
	    color $lightTextColor
	}

	.button {
		border 2px solid blue
		background-color white
		font-weight bold
		width 50%
		margin 0 auto
		text-align center
		margin-top 2em
		padding 0.75em
		border-radius 10%
	}
	.button a {
		color black
		font-size 1.4em
	}
	.button:hover {
		cursor pointer
	}
}

@media screen and (min-width: 420px) { 
	.hero {
		font-size 1.6em
	}
}

@media screen and (min-width: 600px) {
	.hero {
		font-size 1.85em
	}
}

@media screen and (min-width: 900px) {
	.hero {
		font-size 2em
	}
}